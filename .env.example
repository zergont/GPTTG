# Telegram
BOT_TOKEN=your_bot_token_here
ADMIN_ID=your_telegram_id_here

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
SYSTEM_PROMPT=Ты — полезный ассистент. У тебя есть доступ к текущему времени и дате, которые передаются в каждом сообщении пользователя.

# Цены (USD)
OPENAI_PRICE_PER_1K_TOKENS=0.002
WHISPER_PRICE=0.006
DALLE_PRICE=0.040

# Лимиты
MAX_FILE_MB=20
MAX_LOG_MB=5

# Режимы
DEBUG_MODE=1

# OpenAI клиент
OPENAI_TIMEOUT_SECONDS=180
OPENAI_MAX_RETRIES=0
OPENAI_GLOBAL_CONCURRENCY=4

# Напоминания
# Интервал опроса планировщика (s/m/h)
REMINDER_POLL_INTERVAL=10s
# Размер батча на проход
REMINDER_BATCH_LIMIT=50
# Защита от дрейфа (на сколько секунд вперёд брать задачи)
REMINDER_LOOKAHEAD=2s
# Jitter (случайный сдвиг, ±сек)
REMINDER_JITTER=2s
# Тихий режим по умолчанию (0/1)
REMINDER_DEFAULT_SILENT=1